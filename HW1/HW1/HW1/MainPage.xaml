                VerticalTextAlignment="Center"
                HorizontalTextAlignment="Start"
                Grid.Column="1"
                Grid.Row="9"
                Grid.ColumnSpan="2"
                TextDecorations="Underline"
                FontAttributes="Bold"
                FontSize="Medium"
                />
            
              <Label
                Text="Computer Science"
                TextColor="Black"
                VerticalTextAlignment="Center"
                HorizontalTextAlignment="Start"
                Grid.Column="3"
                Grid.Row="9"
                Grid.ColumnSpan="3"
                />
            
              <Label
                Text="Graduation:"
                VerticalTextAlignment="Center"
                HorizontalTextAlignment="Start"
                Grid.Column="1"
                Grid.Row="10"
                Grid.ColumnSpan="2"
                TextDecorations="Underline"
                FontAttributes="Bold"
                FontSize="Medium"
                />
            
              <Label
                Text="Summer 2019"
                TextColor="Black"
                VerticalTextAlignment="Center"
                HorizontalTextAlignment="Start"
                Grid.Column="3"
                Grid.Row="10"
                Grid.ColumnSpan="2"
                />
            
              <Button
                Text="Magic Button"
                Grid.Row="12"
                Grid.Column="3"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                Grid.ColumnSpan="3"
                Clicked="MagicBtn_Clicked"
                />
            
            </Grid>
       
    </StackLayout>
</ContentPage>