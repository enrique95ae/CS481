                Grid.Column="1"
                Grid.Row="5"
                Grid.ColumnSpan="5"
                Grid.RowSpan="2"
                />
            
            <Label
                Text="Name:"
                TextColor="Black"
                VerticalTextAlignment="Center"
                HorizontalTextAlignment="Start"
                Grid.Column="1"
                Grid.Row="7"
                Grid.ColumnSpan="2"
                TextDecorations="Underline"
                FontAttributes="Bold"
                FontSize="Medium"
                />
            
             <Label
                Text="Enrique"
                TextColor="Black"
                VerticalTextAlignment="Center"
                HorizontalTextAlignment="Start"
                Grid.Column="3"
                Grid.Row="7"
                Grid.ColumnSpan="2"
                />
            
              <Label
                Text="L.Name:"
                TextColor="Black"
                VerticalTextAlignment="Center"
                HorizontalTextAlignment="Start"
                Grid.Column="1"
                Grid.Row="8"
                Grid.ColumnSpan="2"
                TextDecorations="Underline"
                FontAttributes="Bold"
                FontSize="Medium"
                />
            
              <Label
                Text="Alonso Esposito"
                TextColor="Black"
                VerticalTextAlignment="Center"
                HorizontalTextAlignment="Start"
                Grid.Column="3"
                Grid.Row="8"
                Grid.ColumnSpan="3"
